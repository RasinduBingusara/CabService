<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>org.megacity.cabservice.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignupController</servlet-name>
        <servlet-class>org.megacity.cabservice.controller.SignupController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupController</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DriverController</servlet-name>
        <servlet-class>org.megacity.cabservice.controller.DriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DriverController</servlet-name>
        <url-pattern>/drivers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>modelController</servlet-name>
        <servlet-class>org.megacity.cabservice.controller.VehicleModelController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>modelController</servlet-name>
        <url-pattern>/model</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>vehicleController</servlet-name>
        <servlet-class>org.megacity.cabservice.controller.VehicleController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>vehicleController</servlet-name>
        <url-pattern>/vehicles</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bookingController</servlet-name>
        <servlet-class>org.megacity.cabservice.controller.BookingController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookingController</servlet-name>
        <url-pattern>/bookings</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>profileController</servlet-name>
        <servlet-class>org.megacity.cabservice.controller.ProfileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>profileController</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>customerBookingController</servlet-name>
        <servlet-class>org.megacity.cabservice.controller.CustomerBookingController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>customerBookingController</servlet-name>
        <url-pattern>/customer_bookings</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>driverBookingController</servlet-name>
        <servlet-class>org.megacity.cabservice.controller.DriverBookingController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>driverBookingController</servlet-name>
        <url-pattern>/driver_bookings</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>paymentController</servlet-name>
        <servlet-class>org.megacity.cabservice.controller.PaymentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>paymentController</servlet-name>
        <url-pattern>/payment</url-pattern>
    </servlet-mapping>

</web-app>